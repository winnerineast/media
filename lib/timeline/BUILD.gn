source_set("timeline") {
  sources = [
    "timeline.h",
    "timeline_function.cc",
    "timeline_function.h",
    "timeline_rate.cc",
    "timeline_rate.h",
  ]

  deps = [
    "//apps/media/services",
    "//lib/ftl",
  ]
}

executable("tests") {
  output_name = "media_lib_timeline_tests"

  testonly = true

  sources = [
    "test/timeline_function_test.cc",
    "test/timeline_rate_test.cc",
  ]

  deps = [
    ":timeline",
    "//apps/test_runner/src:gtest_main",
    "//lib/mtl",
    "//third_party/gtest",
  ]
}
