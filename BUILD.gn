group("media") {
  deps = [
    ":examples",
    ":services",
  ]
}

group("services") {
  deps = [
    "//apps/media/src/audio_server:audio_server",
    "//apps/media/src/flog_service:flog_service",
    "//apps/media/src/media_service:media_service",
    "//apps/media/tools/flog_viewer:flog_viewer",
  ]
}

group("examples") {
  deps = [
    "//apps/media/examples/media_player",
    "//apps/media/examples/vu_meter",
  ]
}

group("apptests") {
  testonly = true

  deps = [
    "//apps/media/lib/timeline:tests",
    "//apps/media/lib/transport:tests",
    "//apps/media/src/audio:apptests",
    "//apps/media/src/demux:apptests",
    "//apps/media/src/media_service:apptests",
    "//apps/media/src/util:apptests",
  ]
}
