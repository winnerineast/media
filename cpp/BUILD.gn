  testonly = true

  sources = [
    "test/run_all_tests.cc",
    "test/shared_buffer_set_allocator_test.cc",
    "test/shared_buffer_set_test.cc",
    "test/timeline_function_test.cc",
    "test/timeline_rate_test.cc",
  ]

  deps = [
    ":cpp",
    "//lib/mtl",
    "//mojo/public/cpp/environment",
    "//mojo/public/cpp/system",
    "//mojo/system",
    "//third_party/gtest",
